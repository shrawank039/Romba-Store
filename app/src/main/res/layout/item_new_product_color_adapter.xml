<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="newProductColor"
            type="in.rombashop.romba.viewobject.ProductAttributeDetail" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/textVieww"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:gravity="center"
            android:textSize="15sp"
            android:minWidth="50dp"
            android:padding="5dp"
            android:layout_margin="@dimen/space_8"
            android:background="@drawable/button_border"
            android:contentDescription="@string/image_default__image"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.52" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/color1ImageView"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/baseline_select_with_check_transparent_24"
            android:contentDescription="@string/image_default__image"
            android:gravity="center"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/textVieww"
            app:layout_constraintEnd_toEndOf="@+id/textVieww"
            app:layout_constraintStart_toStartOf="@+id/textVieww"
            app:layout_constraintTop_toTopOf="@+id/textVieww" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
